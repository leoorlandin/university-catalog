{% extends "layout.njk" %}

{% block content %}
  <div class="card table-container">

    <table width="100%">

      <thead>
        <tr>
          <th>Professor</th>
          <th>Aulas Ministradas</th>
          <th>Ação</th>
        </tr>
      </thead>

      <tbody>
        {% for teacher in teachers%}
          <tr>
            <td>
              <span style="background-image: url({{teacher.avatar_url}})"></span>
              {{teacher.name}}</td>

            <td>
              {% for area in teacher.areas %}
                {{area}}
              {% endfor %}
            </td>
            <td>
              <a href="/teachers/{{teacher.id}}">Ver</a>
            </td>
          </tr>

          {%endfor%}

        </tbody>

      </table>

    </div>

  {% endblock content %}